<Window  x:Class="Booking1._0.FormView.ChangeWorkerLogin"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ChangeWorkerLogin" Height="250" Width="350" WindowStartupLocation="CenterScreen" ResizeMode="NoResize">
    <Grid>
        <Canvas Name="canvasl">
            <Label Canvas.Left="60" Canvas.Top="48" Height="23"  >用户名</Label>
            <TextBox  Canvas.Left="130" Canvas.Top="48" Height="23" Name="TxtUsername" Width="150"></TextBox>
            <Label Canvas.Left="60" Canvas.Top="80" Height="23"  >密码</Label>
            <PasswordBox Canvas.Left="130" Canvas.Top="80" Height="23" Width="150" Name="TxtPassword"></PasswordBox>
            <Label Canvas.Left="60" Canvas.Top="112" Height="23"  >类别</Label>
            <ComboBox Name="RegisterType" Canvas.Left="130" Canvas.Top="112" Height="23" Width="150"></ComboBox>
            <Button Name="BTlogin" Canvas.Left="160" Canvas.Top="144" Height="23" Width="80" Click="BTlogin_Click" >登录</Button>
        </Canvas>
    </Grid>
</Window>
